<div class="action-header">
	<div class="action-name">
		<p>● Editing_profile</p>
	</div>

	<div class="action-detail">
		<p>・プロフィール情報の編集が可能です。</p>
		<p>・必須情報以外は入力不問ですが、情報が多い方が取引につながりやすいです。</p>
		<p>・イメージ画像やemailアドレスは、ユーザー編集画面からご変更可能です。</p>
	</div>
</div>

<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-6">
				<%= form_for @profile do |f| %>
				<%= render 'shared/error_messages', object: f.object %>
				<div class="field">
					<%= f.label :nickname, "ニックネーム", class: "label" %>
					<%= f.text_field :nickname, class: "input" %>
				</div>

				<div class="field">
					<%= f.label :date_of_birth, "誕生日", class: "label" %>
					<%= f.date_select :date_of_birth, use_month_numbers: true, start_year: 1910, end_year: (Time.now.year - 10), default: Date.new(1970, 1, 1), class: 'form-control btn-form' %>
				</div>

				<div class="field">
					<%= f.label :gender_id, "性別", class: "label" %>
					<%= f.collection_select :gender_id, Gender.all, :id, :name, {prompt: '選択してください'}, class: 'form-control btn-form' %>
				</div>

				<div class="field">
					<%= f.label :address_id, "住所", class: "label" %>
					<%= f.collection_select :address_id, Address.all, :id, :name, {prompt: '選択してください'}, class: 'form-control btn-form' %>
				</div>

				<div class="field">
					<%= f.label :personality_id, "性格", class: "label" %>
					<%= f.collection_select :personality_id, Personality.all, :id, :name, {prompt: '選択してください'}, class: 'form-control btn-form' %>
				</div>

				<div class="field">
					<%= f.label :special_skill_id, "特技", class: "label" %>
					<%= f.collection_select :special_skill_id, SpecialSkill.all, :id, :name, {prompt: '選択してください'}, class: 'form-control btn-form' %>
				</div>

				<div class="field">
					<%= f.label :introduce, "自己紹介", class: "label" %>
					<%= f.text_area :introduce, class: "input" %>
				</div>
				<%= f.submit 'Update', profiles_show_path(@user), class: "button is-info" %>
				<% end %>
			</div>
		</div>
	</div>
</section>
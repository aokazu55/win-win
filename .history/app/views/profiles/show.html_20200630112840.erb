<div class="action-header">
	<div class="action-name">
		<p>● <%= t.(profiles.Profile_Detail) %></p>
	</div>
</div>

<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-3">
				<div class="card">
					<div class="card-image">
						<figure class="image is-4by4">
							<%= attachment_image_tag @profile.user, :image %>
						</figure>
					</div>
					<div class="card-content">
						<div class="media">
							<div class="media-content profile-user-name">
								<p class="title is-4"><%= @profile.user.name %></p>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="column is-7">
				<article class="panel profile-panel">
					<p class="panel-heading">プロフィール</p>
					<div class="panel-block">
						<p class="control">
							ニックネーム：<%= @profile.nickname %>
						</p>
					</div>
					<div class="panel-block">
						<p class="control">
							誕生日：<%= @profile.date_of_birth %>
						</p>
					</div>
					<div class="panel-block">
						<p class="control">
							性別：<%= @profile.gender.name %>
						</p>
					</div>
					<div class="panel-block">
						<p class="control">
							住所：<%= @profile.address.name %>
						</p>
					</div>
					<div class="panel-block">
						<p class="control">
							性格：<%= @profile.personality.name %>
						</p>
					</div>
					<div class="panel-block">
						<p class="control">
							特技：<%= @profile.special_skill.name %>
						</p>
					</div>
					<div class="panel-block">
						<p class="control">
							自己紹介：<%= @profile.introduce %>
						</p>
					</div>
				</article>
			</div>
		</div>
	</div>
</section>
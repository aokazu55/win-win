<div class="container">
	<div class="columns is-centered">
		<div class="column is-6">
			<%= form_for @profile do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.label :nickname, t.(profiles.Nickname), class: "label" %>
				<%= f.text_field :nickname, class: "input" %>
			</div>

			<div class="field">
				<%= f.label :date_of_birth, t.(profiles.Date_of_Birth), class: "label" %>
				<%= f.date_select :date_of_birth, use_month_numbers: true,　start_year: 1910, end_year: (Time.now.year - 10), default: Date.new(1970, 1, 1), class: 'form-control btn-form' %>
			</div>

			<div class="field">
				<%= f.label :gender_id, t.(profiles.Gender), class: "label" %>
				<%= f.collection_select :gender_id, Gender.all, :id, :name, {prompt: '選択してください'}, class: 'form-control btn-form' %>
			</div>

			<div class="field">
				<%= f.label :address_id, t.(profiles.Address), class: "label" %>
				<%= f.collection_select :address_id, Address.all, :id, :name, {prompt: '選択してください'}, class: 'form-control btn-form' %>
			</div>

			<div class="field">
				<%= f.label :personality_id, t.(profiles.Personality), class: "label" %>
				<%= f.collection_select :personality_id, Personality.all, :id, :name, {prompt: '選択してください'}, class: 'form-control btn-form' %>
			</div>

			<div class="field">
				<%= f.label :special_skill_id, t.(profiles.SpecialSkill), class: "label" %>
				<%= f.collection_select :special_skill_id, SpecialSkill.all, :id, :name, {prompt: '選択してください'}, class: 'form-control btn-form' %>
			</div>

			<div class="field">
				<%= f.label :introduce, t.(profiles.Introduce), class: "label" %>
				<%= f.text_area :introduce, class: "input" %>
			</div>

			<%= f.submit t.(profiles.registration), class: "button is-info" %>
			<%= link_to t.(profiles.back), root_path, class: "button is-success" %>
			<% end %>
		</div>
	</div>
</div>